<odoo>
    <record id="view_form_receta" model="ir.ui.view">
        <field name="name">receta.form</field>
        <field name="model">recetas.receta</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                        <field name="imagen"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_receta" model="ir.ui.view">
        <field name="name">receta.tree</field>
        <field name="model">recetas.receta</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_recetas" model="ir.actions.act_window">
        <field name="name">Recetas</field>
        <field name="res_model">recetas.receta</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_recetas_root" name="Recetas"/>
    <menuitem id="menu_recetas" name="GestiÃ³n" parent="menu_recetas_root"/>
    <menuitem id="menu_recetas_items" name="Recetas" parent="menu_recetas" action="action_recetas"/>
</odoo>
