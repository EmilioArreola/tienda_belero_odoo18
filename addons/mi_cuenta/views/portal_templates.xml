<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hide_portal_edi_format_custom" model="ir.ui.view">
            <field name="name">Hide Portal EDI Format</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.portal_my_details_fields"/>
            <field name="arch" type="xml">
                <xpath expr="//select[@name='invoice_edi_format']/.." position="attributes">
                    <attribute name="style">display: none !important;</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>