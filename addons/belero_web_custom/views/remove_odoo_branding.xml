<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- Heredar la plantilla original -->
    <t t-extend="web.UserMenu">
        <t t-jquery="t[t-foreach='getElements()']" t-operation="replace">
            <t t-foreach="getElements()" t-as="element" t-key="element_index">
                <!-- Mostramos solo los elementos que no sean documentaciÃ³n, soporte o acerca de -->
                <t t-if="element.id not in ['documentation', 'support', 'about'] and not element.hide">
                    <DropdownItem
                        t-if="element.type == 'item' or element.type == 'switch'"
                        attrs="{ href: element.href, 'data-menu': element.id }"
                        onSelected="element.callback"
                    >
                        <div class="d-flex justify-content-between p-0 w-100">
                            <t t-out="element.description"/>
                            <CheckBox
                                t-if="element.type == 'switch'"
                                value="element.isChecked"
                                className="'form-switch ms-2'"
                                onChange="element.callback"
                            />
                        </div>
                    </DropdownItem>
                    <div t-if="element.type == 'separator'" role="separator" class="dropdown-divider"/>
                </t>
            </t>
        </t>
    </t>

</templates>
