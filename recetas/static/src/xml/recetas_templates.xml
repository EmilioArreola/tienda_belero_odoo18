<odoo>
    <template id="recetas_galeria_template" name="Galería de Recetas">
        <t t-call="website.layout">
            <div class="container my-5">
                <h1 class="text-center mb-4">Recetas</h1>
                <div class="row">
                    <t t-foreach="recetas" t-as="receta">
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm">
                                <img t-att-src="'/web/image/recetas.receta/%d/imagen_preview' % receta.id" class="card-img-top" />
                                <div class="card-body">
                                    <h5 class="card-title"><t t-esc="receta.name" /></h5>
                                    <p class="card-text"><t t-esc="receta.descripcion_corta or ''" /></p>
                                    <button class="btn btn-primary ver-receta" t-att-data-id="receta.id">Ver receta</button>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="modalReceta" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalRecetaTitulo">Cargando...</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body" id="modalRecetaContenido">
                            <!-- Contenido dinámico -->
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
