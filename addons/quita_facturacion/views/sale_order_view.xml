<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_hide_invoice" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.hide.invoice</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//button[@name='action_create_invoice']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//button[@name='create_invoice']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>
</odoo>