<odoo>
    <record id="view_product_template_form_discount" model="ir.ui.view">
        <field name="name">product.template.form.discount</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']//group[@name='sale']" position="inside">
                
                <label for="product_max_discount" string="Desc. Máximo Específico"/>
                <div class="o_row">
                    <field name="product_max_discount" style="width: 50px !important;"/>
                    <span class="text-muted" style="margin-left: 5px;">% (0 = Usa Global)</span>
                </div>

            </xpath>
        </field>
    </record>
</odoo>