<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="portal_my_details_add_regimen_final" model="ir.ui.view">
            <field name="name">portal.my.details.add.regimen</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="portal.portal_my_details"/>
            <field name="priority">20</field>
            <field name="arch" type="xml">

                <xpath expr="//select[@name='country_id']/../.." position="after">
                    <div class="row">
                        <div class="col-xl-6 mb-3">
                            <label class="col-form-label" for="x_regimen_fiscal">RÃ©gimen Fiscal</label>
                            <input type="text"
                                   name="x_regimen_fiscal"
                                   class="form-control"
                                   t-att-value="partner.x_regimen_fiscal or ''"
                                   placeholder="Ej. 601 - General de Ley Personas Morales"/>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>


        <record id="portal_my_details_remove_edi_final" model="ir.ui.view">
            <field name="name">portal.my.details.remove.edi</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.portal_my_details_fields"/>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <xpath expr="//select[@name='invoice_edi_format']/.." position="replace">
                </xpath>
            </field>
        </record>

    </data>
</odoo>