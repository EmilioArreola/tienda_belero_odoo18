<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_sucursal" model="ir.ui.view">
        <field name="name">sale.order.form.sucursal</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                
                <field name="sucursal_recogida"
                       invisible="not carrier_id or carrier_id.delivery_type != 'fixed'"
                       required="carrier_id and carrier_id.delivery_type == 'fixed'"/>
            
            </xpath>
            
        </field>
    </record>
</odoo>