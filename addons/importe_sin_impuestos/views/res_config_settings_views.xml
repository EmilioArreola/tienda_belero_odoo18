<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_tax" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.tax</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='quotation_order_setting_container']" position="inside">
                <setting string="Visualización Belero" help="Configura cómo ven los clientes los precios">
                    <field name="belero_tax_included"/>
                    <div class="text-muted">
                        Activa para mostrar totales e importes con impuestos incluidos por defecto en reportes y vistas personalizadas.
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>