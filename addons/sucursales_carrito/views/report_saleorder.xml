<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_saleorder_document_sucursal" inherit_id="sale.report_saleorder_document">
            
            <xpath expr="//div[@id='informations']" position="inside">
                
                <div t-if="doc.sucursal_recogida" class="col-auto col-3 mw-100 mb-2">
                    <strong>Sucursal de Recogida:</strong>
                    <p class="m-0" t-field="doc.sucursal_recogida"/>
                </div>

                <div t-if="doc.carrier_id and not doc.sucursal_recogida" class="col-auto col-3 mw-100 mb-2">
                    <strong>Método de Envío:</strong>
                    <p class="m-0" t-field="doc.carrier_id.name"/>
                </div>
                
            </xpath>

        </template>
    </data>
</odoo>