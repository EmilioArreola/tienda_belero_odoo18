<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_receta_search" model="ir.ui.view">
        <field name="name">recetas.receta.search</field>
        <field name="model">recetas.receta</field>
        <field name="arch" type="xml">
            <search string="Buscar Recetas">
                <field name="name" string="Nombre de la Receta"/>
                <field name="categoria_id"/>
                <field name="tags_ids"/>
                <separator/>
                <group expand="0" string="Agrupar por...">
                    <filter name="group_by_categoria" string="Categoría" context="{'group_by': 'categoria_id'}"/>
                    <filter name="group_by_dificultad" string="Dificultad" context="{'group_by': 'dificultad'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_receta_form" model="ir.ui.view">
        <field name="name">recetas.receta.form</field>
        <field name="model">recetas.receta</field>
        <field name="arch" type="xml">
            <form string="Receta">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Ej: Paella Valenciana"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="categoria_id"/>
                            <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="descripcion_corta"/>
                        </group>
                        <group>
                            <field name="imagen" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                    
                    <group string="Detalles de la Receta">
                        <field name="tiempo_preparacion"/>
                        <field name="tiempo_coccion"/>
                        <field name="tiempo_total"/>
                        <field name="porciones"/>
                        <field name="dificultad"/>
                    </group>

                    <notebook>
                        <page string="Ingredientes">
                            <field name="ingredientes" placeholder="- 200g de Harina&#10;- 2 Huevos&#10;- 50g de Azúcar..."/>
                        </page>
                        <page string="Preparación">
                            <field name="preparacion"/>
                        </page>
                        <page string="Notas Adicionales">
                            <field name="notas"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_receta_tree" model="ir.ui.view">
        <field name="name">recetas.receta.tree</field>
        <field name="model">recetas.receta</field>
        <field name="arch" type="xml">
            <list string="Recetas">
                <field name="name"/>
                <field name="categoria_id"/>
                <field name="tiempo_total" string="Tiempo Total (min)"/>
                <field name="dificultad" widget="badge" decoration-success="dificultad == 'facil'" decoration-warning="dificultad == 'medio'" decoration-danger="dificultad == 'dificil'"/>
            </list>
        </field>
    </record>

    <record id="view_receta_kanban" model="ir.ui.view">
        <field name="name">recetas.receta.kanban</field>
        <field name="model">recetas.receta</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="dificultad"/>
                <field name="tags_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('recetas.receta', 'imagen_preview', record.id.raw_value)" alt="Receta"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div>
                                    <span t-if="record.dificultad.raw_value == 'facil'" class="badge badge-success">Fácil</span>
                                    <span t-if="record.dificultad.raw_value == 'medio'" class="badge badge-warning">Medio</span>
                                    <span t-if="record.dificultad.raw_value == 'dificil'" class="badge badge-danger">Difícil</span>
                                </div>
                                <div class="mt-1">
                                    <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

   <record id="action_recetas" model="ir.actions.act_window">
    <field name="name">Recetas</field>
    <field name="res_model">recetas.receta</field>
    <field name="view_mode">kanban,list,form</field>
    <field name="search_view_id" ref="view_receta_search"/>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            ¡Crea tu primera receta!
        </p><p>
            Aquí podrás gestionar todas tus recetas de cocina.
        </p>
    </field>
</record>

    <menuitem id="menu_recetas_root" name="Recetas" sequence="10"/>
    <menuitem id="menu_recetas" name="Todas las Recetas" parent="menu_recetas_root" action="action_recetas" sequence="10"/>

</odoo>