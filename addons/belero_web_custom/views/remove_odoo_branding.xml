<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="webclient_bootstrap_inherit" inherit_id="web.webclient_bootstrap">
        <xpath expr="//t[@t-set='head_web']" position="inside">
            <style type="text/css">
                /* Ocultar Documentaci√≥n */
                .o_menu_systray .o_user_menu a[data-menu="documentation"],
                .o_menu_systray .dropdown-menu a[href*="documentation"],
                nav.o_main_navbar a[href*="documentation"] {
                    display: none !important;
                }
                
                /* Ocultar Soporte */
                .o_menu_systray .o_user_menu a[data-menu="support"],
                .o_menu_systray .dropdown-menu a[href*="support"],
                nav.o_main_navbar a[href*="support"] {
                    display: none !important;
                }
                
                /* Ocultar Mi cuenta de Odoo.com */
                .o_menu_systray .o_user_menu a[href*="odoo.com/my"],
                .o_menu_systray .dropdown-menu a[href*="odoo.com"],
                nav.o_main_navbar a[href*="odoo.com/my"],
                .dropdown-item[href*="/odoo_account"] {
                    display: none !important;
                }
            </style>
        </xpath>
    </template>
</odoo>