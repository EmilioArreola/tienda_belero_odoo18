<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="mi_checkout_con_sucursales" inherit_id="website_sale.checkout">
        <xpath expr="//t[@t-call='website_sale.billing_address_row']" position="replace">
            
            <div class="mb-3 d-none" id="sucursal_picker_wrapper">
                <h4>SELECCIONE SU SUCURSAL</h4>
                <select name="sucursal_recogida" class="form-select" id="sucursal_select">
                    <option value="">Seleccione una sucursal</option>
                    <option value="escuadron_201">Escuadrón 201 #300, Antiguo Aereopuerto</option>
                    <option value="lazaro_cardenas">Av Lázaro Cárdenas 503-3, Col. Guelatao, Santa Lucía</option>
                    <option value="cosijoeza">Calle Cosijoeza #216-A, Barrio de Jalatlaco</option>
                    <option value="eucaliptos">Eucaliptos #215 В, Col. Reforma, 68050</option>
                    <option value="riveras">Libramiento Riveras del Atoyac #122-2</option>
                    <option value="diaz_ordaz">Díaz Ordaz #710, Col. Centro</option>
                    <option value="eduardo_mata">Av. Eduardo Mata #2302, Periférico</option>
                    <option value="cristobal_colon">Carretera Cristóbal Colón #202, Santa Rosa</option>
                    <option value="yagul">Calle Yagul esq. Cosijopi #122-A</option>
                    <option value="vicente_guerrero">Vicente Guerrero, Centro, Oaxaca</option>
                </select>
            </div>

        </xpath>
    </template>

    <template id="cambiar_texto_items_resumen" inherit_id="website_sale.cart_summary_collapse">
        <xpath expr="//div[contains(@class, 'd-flex')]/text()[contains(., 'item(s)')]" position="replace">
            &nbsp;producto(s)&nbsp;-&nbsp;
        </xpath>
    </template>

</odoo>